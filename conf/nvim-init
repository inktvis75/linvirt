" requirements
" - git
" - nodejs: curl -sL install-node.now.sh/lts | bash
" - export variable: XDG_DATA_HOME="~/.config"
" - language server bash: npm i -g bash-language-server
" - language server yaml: npm i -g yaml-language-server
" - vim-plug: sh -c 'curl -fLo "${XDG_DATA_HOME:-$HOME/.local/share}"/nvim/site/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'
" in neovim: 
" - :PlugInstall
" - :call coc#util#install()
" - :CocInstall coc-yaml
" - :CocInstall coc-sh
" - :CocConfig, content in this repo: nvim-coc-settings.json

" Default encoding
set encoding=utf-8

call plug#begin(stdpath('data') . '/plugged')
Plug 'neoclide/coc.nvim'
Plug 'morhetz/gruvbox'
Plug 'noah/vim256-color'
call plug#end()

set number
set cursorline
set ruler
set laststatus=2
set tabstop=4 
set softtabstop=4 
set shiftwidth=4 
set expandtab 
set smarttab 
set textwidth=80
set nowrap
set hlsearch
set showmatch
set list
set listchars=tab:▸\ ,trail:¬,extends:❯,precedes:❮
set showbreak=↪
set title
set scrolloff=10
set mouse=
set textwidth=78
set formatoptions=jcroq
set ttyfast
set lazyredraw
set regexpengine=2
set updatetime=800
set termguicolors

colorscheme gruvbox
set background=light
