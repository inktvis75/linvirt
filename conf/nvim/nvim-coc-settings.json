{
"languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
    },
    "yaml": {
        "command": "yaml-language-server",
        "args": ["start", "--stdio"],
        "filetypes": ["yaml"],
    }
  },

"yaml.format.enable": true,
"yaml.format.singleQuote": true,
"yaml.trace.server": "verbose",
"yaml.schemas": {
      "kubernetes": "/*.yaml",
      "https://json.schemastore.org/ansible-playbook": "/*.yml"
  }
}
